<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="csharp_app.ViewController.Configuration.ConfigurationUserControlTwsTab">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/> <!-- Width for labels -->
            <ColumnDefinition Width="280"/> <!-- Width for input fields -->
            <ColumnDefinition Width="Auto"/> <!-- Width for buttons -->
            <ColumnDefinition Width="Auto"/> <!-- Width for buttons -->
        </Grid.ColumnDefinitions>
        
        <!-- TCP Server -->
        <TextBlock Text="TCP Server" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,20"/>
        <TextBox Name="TcpServer" Grid.Row="0" Grid.Column="1" Margin="0,0,0,20" TextChanged="OnTcpServerChanged"/>
        
        <!-- TCP Port -->
        <TextBlock Text="TCP Port" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,20"/>
        <TextBox Name="TcpPort" Grid.Row="1" Grid.Column="1" Margin="0,0,0,20" TextChanged="OnTcpPortChanged"/>
        
    </Grid>
</UserControl>
